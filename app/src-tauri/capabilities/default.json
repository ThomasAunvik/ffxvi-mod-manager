{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "enables the default permissions",
	"windows": ["main"],
	"permissions": [
		"core:path:default",
		"core:event:default",
		"core:window:default",
		"core:app:default",
		"core:resources:default",
		"core:menu:default",
		"core:tray:default",
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"args": ["standalone/server.js"],
					"cmd": "",
					"name": "binaries/node",
					"sidecar": true
				}
			]
		},
		"shell:allow-open"
	]
}
